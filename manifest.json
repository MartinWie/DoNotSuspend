{
  "manifest_version": 2,
  "name": "__MSG_manifest_name__",
  "description": "__MSG_manifest_description__",
  "version": "2.1.3",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "__MSG_manifest_title__",
    "default_icon":"icon.png",
    "default_popup":"popup.html"
  },
  "icons": {
    "16":"icon.png",
    "48":"icon.png",
    "128":"icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "default_locale": "en"
}
